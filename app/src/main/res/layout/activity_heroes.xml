<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chuan.aov.HeroesActivity">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutfirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lltank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivtank"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/tank" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llassasin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lltank"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivassasin"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/assasin" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llfighter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llassasin"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivfighter"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/fighter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llmage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llassasin"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivmage"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/mage" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llsupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llassasin"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivsupport"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/support" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llmm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llassasin"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivmm"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/marksman" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>
