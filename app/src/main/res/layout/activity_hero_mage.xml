                        android:scaleType="fitXY"
                        android:gravity="center"
                        android:text="kagura"
                        android:textColor="#ffffffff" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
